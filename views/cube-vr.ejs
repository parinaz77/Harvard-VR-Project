<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Curved Images</title>
    <meta name="description" content="Curved Images - A-Frame">
    <!-- <script src="https://aframe.io/releases/0.5.0/aframe.min.js"></script> -->
    <script src="https://rawgit.com/aframevr/aframe/f850c2f/dist/aframe-master.min.js"></script>
    <!-- <script src="dist/aframe-master.js"></script> -->
  </head>
  <body>
    <a-scene>
      <a-assets>
        <img id="mozvr" src="http://storage.googleapis.com/harvard-vr/mozvr.png" crossorigin="anonymous" >
        <img id="shadow2" src="http://storage.googleapis.com/harvard-vr/radial-shadow-2.png" crossorigin="anonymous">
        <%if(collection.images.length){ %>
            <%for(var i=0; i < collection.images.length; i++){ %>
              <img id="ui<%=i%>" src="http://storage.googleapis.com/harvard-vr/<%=collection.images[i].name %>" crossorigin="anonymous">
              <%}%>
            <%} else { %>
              <img id="ui1" src="http://storage.googleapis.com/harvard-vr/<%=collection.images.name %>" crossorigin="anonymous">
            <%}%>
      </a-assets>

      <a-image src="#ui0" radius="5.7" width="20" height="10"
                      position="-0.039 0 -10.267"></a-image>

      <a-image src="#ui1" radius="1.7" width="20" height="10"
                     rotation="0 90 0" position="-10.043 0 -0.342"></a-image>


      <a-image src="#ui2" radius="1.7" width="20" height="10"
                     rotation="0 180 0" position="-0.073 0 9.677"></a-image>


      <a-image src="#ui3" radius="1.7" width="20" height="10"
                     rotation="0 -90 0" position="9.850 0 -0.147"></a-image>
      
      <a-image src="#ui4" position="-0.076 -4.702 4.725" width="20" height="10" 
                    rotation="-90 0 0"></a-image>

      <a-image src="#ui5" position="-0.076 -4.702 -5.274" width="20" height="10" 
                    rotation="-90 0 0"></a-image>

      <a-image src="#ui6" position="-0.019 4.982 4.755" width="20" height="10" 
                    rotation="90 0 0"></a-image>

      <a-image src="#ui7" position="-0.019 4.982 -5.227" width="20" height="10" 
                    rotation="90 0 0"></a-image>
               
               


